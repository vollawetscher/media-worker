# Supabase Configuration (Required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Optional: Direct database connection for LISTEN/NOTIFY (improves room discovery)
# Get this from Supabase Dashboard > Project Settings > Database > Connection string (Session mode)
# SUPABASE_DB_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# Worker Configuration
MODE=transcription
POLLING_INTERVAL_MS=5000
HEARTBEAT_INTERVAL_MS=15000
LOG_LEVEL=info

# Room Discovery Configuration
REALTIME_TIMEOUT_MS=30000
REALTIME_RETRY_INTERVAL_MS=120000
ROOM_CLAIM_CACHE_DURATION_MS=30000
ENABLE_POLLING_FALLBACK=true
ENABLE_DATABASE_NOTIFY=true

# Optional: Worker ID (auto-generated if not set)
# WORKER_ID=custom-worker-id
